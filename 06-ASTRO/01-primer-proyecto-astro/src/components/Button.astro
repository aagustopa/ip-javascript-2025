  .btn {
    background-color: lightseagreen;
    color: white;
    padding: 0.3rem 0.8rem;
    font-size: 1.5rem;
    border-radius: 0.5rem;
    border: none;
  }

  .btn-sm {
    font-size: 1.2rem;
  }

  .btn-lg {
    font-size: 2rem;
  }

  .btn-xl {
    font-size: 3rem;
  }
